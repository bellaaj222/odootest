<odoo>

    <record id="view_b_show_form" model="ir.ui.view">
        <field name="name">b.show.form</field>
        <field name="model">b.show</field>
        <field name="arch" type="xml">
            <form string="Report Options">
                <div class="oe_title">
                    <h1>
                        <label for="name" string="Recherche des Bons"/>
                    </h1>
                </div>
                <group col="4">
                    <group string="Filtre Projet">
                        <field name="gest_id" string="Superviseur(Controleur/Correcteur)"
                               options="{'no_create': True, 'no_create_edit':True,'no_open':True}" invisible="1"/>
                        <field name="employee_id" string="Employé"
                               options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
                        <field name="product_id" string="Type Service"
                               options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
                        <field name="name" string="Num Bon" options="{'no_create': True, 'no_create_edit':True}"
                               invisible="1"/>
                        <field name="inv_emp" widget="selection" string="Statut" required="1"/>
                    </group>
                    <group string="Filtre Date (% Date Début Taches)">
                        <field name="date_from" string="Date de"/>
                        <field name="date_to" string="Date à"/>
                    </group>
                    <group string="Filtre Département/Ressources">
                        <field name="partner_id" string="Client"
                               options="{'no_create': True, 'no_create_edit':True}"/>
                        <field name="project_ids" string="Projets"
                               options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
                        <field name="categ_id" string="Département"
                               options="{'no_create': True, 'no_create_edit':True,'no_open':True}"/>
                    </group>
                </group>
                <footer>
                    <button name="show_results1_" string="Afficher" type="object" class="oe_highlight align_right" colspan="2"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_b_show" model="ir.actions.act_window">
        <field name="name">Recherche Bons</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">b.show</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'form', 'view_id': ref('b_show.view_b_show_form')})]"/>
    </record>

    <menuitem id="menu_b_show" name="Recherche Bons" parent="project_custom.menu_project" sequence="60"
              action="action_b_show"/>

</odoo>