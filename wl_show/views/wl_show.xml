<odoo>

    <record id="view_wl_show_form" model="ir.ui.view">
        <field name="name">wl.show.form</field>
        <field name="model">wl.show</field>
        <field name="arch" type="xml">
            <form string="Report Options">
                <div class="oe_title">
                    <h1>
                        <label for="name" string="Recherche des Taches"/>
                    </h1>
                </div>
                <group col="4">
                    <group string="Filtre Projet">
                        <field name="name" invisible="1"/>
                        <field name="partner_id" string="Client" domain="[('customer','=',True)]"
                               options="{'no_create': True, 'no_create_edit':True}"/>
                        <field name="project_id" string="Projet"
                               options="{'no_create': True, 'no_create_edit':True}"
                               domain="[('partner_id','=',partner_id)]"/>
                        <newline/>
                        <button name="delete" type="object" string="" icon="fa-trash-o" class="btn-primary"/>
                        <newline/>
                        <field name="project_ids" string="Projets (C.M)" domain="[('partner_id','=',partner_id)]"
                               help="Permet d'effectuer des choix multiples de projets"/>
                        <field name="product_id" string="Type de Service"
                               options="{'no_create': True, 'no_create_edit':True}"/>
                    </group>
                    <group string="Filtre Date (% Date Début Travaux)">
                        <field name="date_from" string="Date de"/>
                        <field name="date_to" string="Date à"/>
                        <field name="inv_cust" string="Factures Client?" required="1"/>
                        <field name="inv_emp" string="Factures Employé?" required="1"/>
                    </group>
                    <group string="Filtre Département/Ressources">
                        <field name="categ_id" string="Département"
                               options="{'no_create': True, 'no_create_edit':True}"/>
                        <field name="checked" string="Ignorer Client Projet?"
                               help="Si décoché, la présence du projet et/ou client est obligatoire, sinon il affichera toutes les lignes sans restrictions"/>
                    </group>
                </group>
                <footer>
                    <button name="show_results" string="Afficher" type="object" class="oe_highlight align_right" colspan="2"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_wl_show" model="ir.actions.act_window">
        <field name="name">Recherche Tâches pour Facturation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wl.show</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'form', 'view_id': ref('wl_show.view_wl_show_form')})]"/>
    </record>

    <menuitem id="menu_wl_show" name="Recherche Tâches pour Facturation" sequence="0"
              parent="project_custom.menu_facture_partner"
              action="action_wl_show"/>

</odoo>